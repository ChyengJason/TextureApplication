<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/image_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="GL图片"/>
    <Button
        android:id="@+id/fliter_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="GL效果图" />
    <Button
        android:id="@+id/camera_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="GL预览" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/image_view_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ImageView图片" />
    <Button
        android:id="@+id/image_surfaceview_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SurfaceView图片" />
    <Button
        android:id="@+id/image_custom_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CustomView图片" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/media_extracotr_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="mp4转换" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/camera_preview_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="camera预览" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/recording_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="录音" />
</LinearLayout>